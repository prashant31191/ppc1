<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/wetherbackid" android:layout_width="wrap_content"
	android:layout_height="45dp"
	android:orientation="horizontal">	
	<ImageView android:id="@+id/wetherpic"
	android:layout_width="60dp"
	android:layout_height="45dp"
	android:background="@drawable/weather_sunny"/>
		
	<LinearLayout 
	android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:orientation="vertical">
		
	<TextView android:id="@+id/weathertemp"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/weather_widget_temp"
	/>
	<TextView android:id="@+id/weathercity"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/weather_widget_city"
	/>
	</LinearLayout>
	
</LinearLayout>