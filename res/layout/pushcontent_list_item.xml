<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ImageView android:id="@+id/iv_pushcontent_type"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginRight="5px" 
		android:padding="5px"/>			
	<RelativeLayout android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:id="@+id/relativeLayout1">	
		<TextView android:id="@+id/tv_pushcontent_title"
			android:textSize="10sp" android:textStyle="italic" android:textColor="#ffffff"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginRight="18px" android:text="title"
			android:layout_alignParentTop="true"
        	android:layout_alignParentLeft="true"/>
		<TextView android:id="@+id/tv_pushcontent_content"
			android:textSize="14sp" android:textStyle="bold" android:textColor="#FFFFFF"
			android:layout_width="wrap_content" android:layout_height="wrap_content" 
			android:text="content"			
        	android:layout_below="@+id/tv_pushcontent_title"/>
		<TextView android:id="@+id/tv_pushcontent_size"
			android:textSize="12sp" android:textStyle="italic" android:textColor="#ffffff"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginRight="10px" android:text="size"
			android:layout_below="@+id/tv_pushcontent_content"
			android:layout_toLeftOf="@+id/btn_pushcontent_action"/>
		<TextView android:id="@+id/tv_pushcontent_time"
			android:typeface="sans" android:textSize="12sp" android:textStyle="bold"
			android:textColor="#ffffff" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginRight="10px" 
			android:text="time"
			android:layout_below="@+id/tv_pushcontent_content"
			android:layout_toLeftOf="@+id/tv_pushcontent_size"/>
		<TextView android:id="@+id/tv_pushcontent_status"
			android:typeface="sans" android:textSize="12sp" android:textStyle="bold"
			android:textColor="#ffffff" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginRight="12px" 
			android:text="status"
			android:layout_below="@+id/tv_pushcontent_content"
			android:layout_toLeftOf="@+id/tv_pushcontent_time"/>
		<Button android:layout_width="wrap_content" 
			android:id="@+id/btn_pushcontent_action" 	
			android:layout_height="fill_parent"
			android:layout_alignParentRight="true" 
			android:layout_marginRight="5px"
			android:focusable="false"
			android:text="@string/view"></Button>
	</RelativeLayout>
	
	
</LinearLayout>
