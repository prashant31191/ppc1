<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ImageView android:id="@+id/iv_pushcontent_type"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginRight="5px" android:src="@drawable/icon"
		android:padding="5px" />
	<LinearLayout android:layout_width="0dp"
		android:layout_height="wrap_content" android:id="@+id/relativeLayout1"
		android:padding="5px" android:layout_weight="10"
		android:orientation="vertical">
		<TextView android:id="@+id/tv_pushcontent_title"
			android:textSize="14sp" android:textStyle="bold" android:textColor="#ffffff"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="title" android:maxLines="1" android:ellipsize="middle" />
		<TextView android:id="@+id/tv_pushcontent_content"
			android:textSize="14sp" android:textStyle="bold" android:textColor="#FFFFFF"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="content" android:ellipsize="middle" android:singleLine="true"
			android:layout_below="@+id/tv_pushcontent_title" />
		<ProgressBar android:id="@+id/progressBar"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_marginRight="10dp"
				android:minHeight="8dp"
				android:maxHeight="8dp"
				></ProgressBar>
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="match_parent" android:id="@+id/linearLayout1">			
			<TextView android:id="@+id/tv_pushcontent_size"
				android:textSize="12sp" 
				android:textColor="#ffffff" android:layout_width="0dp"
				android:layout_height="wrap_content" android:layout_marginRight="10dp"
				android:text="size"
				android:gravity="right"
				android:layout_weight="10"/>
			<TextView android:id="@+id/tv_pushcontent_time"
				android:typeface="sans" android:textSize="12sp" android:textStyle="bold"
				android:textColor="#ffffff" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="time"
				android:layout_marginRight="10dp"/>
			<TextView android:text="status" android:textSize="12sp"
				android:layout_width="wrap_content" android:id="@+id/tv_pushcontent_status"
				android:layout_height="wrap_content" android:typeface="sans"
				android:textColor="#ffffff" android:textStyle="bold"
				android:layout_marginRight="10dp"></TextView>
		</LinearLayout>
	</LinearLayout>


</LinearLayout>
