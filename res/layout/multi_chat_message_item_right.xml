
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:weightSum="1.0">

	<View android:id="@+id/view1" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight=".4"></View>

	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/linearLayout1" android:layout_width="fill_parent"
		android:layout_marginTop="10dip" android:layout_weight=".6"
		android:orientation="vertical">

		<TextView android:id="@+id/tv_chat_item_content"
			android:textSize="14sp" android:textColor="@color/black"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="content" android:layout_gravity="right"
			android:padding="10dip" android:background="@drawable/im_out_bubble_green" />
		<TextView android:id="@+id/tv_chat_item_name_time"
			android:textSize="10sp" android:textColor="@color/light_black"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="title" android:singleLine="true"
			android:layout_gravity="right" android:layout_marginRight="10dip" />

	</LinearLayout>

	<ImageView android:id="@+id/avater" android:layout_width="50dp"
		android:layout_height="50dp" 
		android:src="@drawable/icon"
		android:layout_marginRight="5dip" />

</LinearLayout>
