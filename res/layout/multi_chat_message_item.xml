
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">


	<ImageView android:id="@+id/avater" android:layout_width="50dp"
		android:layout_height="50dp" android:layout_marginRight="5px"
		android:src="@drawable/icon"
		/>

	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/linearLayout1" android:layout_width="fill_parent"
		android:layout_marginTop="10dip"
		android:layout_weight="3" android:orientation="vertical">

		<TextView android:id="@+id/tv_chat_item_content"
			android:textSize="14sp" android:textColor="@color/black"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="content gh fgfg fggsrg"
			android:padding="10dip"
			android:orientation="vertical"
			android:background="@drawable/im_in_bubble" />

		<TextView android:id="@+id/tv_chat_item_name_time"
				android:textSize="10sp" android:textColor="@color/light_black"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="title" android:singleLine="true"
				android:layout_alignParentTop="true" android:layout_alignParentLeft="true" />
	</LinearLayout>
	
	<View android:id="@+id/view1" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="7"></View>

</LinearLayout>
