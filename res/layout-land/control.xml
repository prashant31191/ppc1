<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical" android:id="@+id/control"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:layout_gravity="center_vertical|right" 
	xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:id="@+id/all_apps_button_cluster"
	android:layout_width="wrap_content" android:layout_marginRight="5dip"
	android:layout_gravity="center_vertical|right" android:layout_height="wrap_content"
	android:orientation="vertical" >
	<ImageButton android:id="@+id/bt_setting"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:src="@drawable/bth_seting" android:focusable="true"
		android:clickable="true" android:background="#00000000"
		android:layout_marginLeft="2dip" />
	<ImageButton android:id="@+id/bt_info"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:src="@drawable/bth_info" android:focusable="true"
		android:clickable="true" android:background="#00000000"
		android:layout_marginLeft="2dip" />
	<ImageButton android:id="@+id/bt_movie"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:src="@drawable/bth_movie" android:focusable="true"
		android:clickable="true" android:background="#00000000"
		android:layout_marginLeft="2dip" />
	<ImageButton android:id="@+id/bt_music"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:src="@drawable/bth_music" android:focusable="true"
		android:clickable="true" android:background="#00000000"
		android:layout_marginLeft="2dip" />
	<ImageButton android:id="@+id/bt_tv" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/bth_tv"
		android:focusable="true" android:clickable="true" android:background="#00000000"
		android:layout_marginLeft="2dip" />
	<ImageButton android:id="@+id/bt_allapp"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:src="@drawable/bth_allapp" android:focusable="true"
		android:clickable="true" android:background="#00000000"
		android:layout_marginLeft="2dip" />
</LinearLayout>
</LinearLayout>